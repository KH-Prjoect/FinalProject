DROP SEQUENCE LECTURESEQ;
DROP TABLE LECTURE;

CREATE SEQUENCE LECTURESEQ;

CREATE TABLE LECTURE(
	LECTURE_NUM NUMBER PRIMARY KEY,
	LECTURE_NAME VARCHAR2(1000) NOT NULL,
	MEMBER_ID VARCHAR2(500) NOT NULL,
	MEMBER_NAME VARCHAR2(200) NOT NULL,
	LECTURE_CATEGORY VARCHAR2(500) NOT NULL,
	LECTURE_PRICE NUMBER NOT NULL,
	LECTURE_CONTENT VARCHAR2(4000) NOT NULL
);

SELECT LECTURE_NUM, LECTURE_NAME, MEMBER_ID, MEMBER_NAME, LECTURE_CATEGORY, LECTURE_PRICE, LECTURE_CONTENT
FROM LECTURE
ORDER BY LECTURE_NUM DESC;

INSERT INTO LECTURE
VALUES(LECTURESEQ.NEXTVAL, '중식 패키지', 'asd123', '강사1', '중식', '39800', '중식을 배울 수 있습니다');

UPDATE LECTURE
SET MEMBER_ID = 12
WHERE LECTURE_NUM = 1;

DELETE FROM LECTURE 
WHERE LECTURE_NUM = 22;

DROP SEQUENCE PAYSEQ;
DROP TABLE PAY;

CREATE SEQUENCE PAYSEQ;

CREATE TABLE PAY(
	PAY_NUM NUMBER PRIMARY KEY,
	PAY_DATE DATE NOT NULL,
	PAY_PRICE NUMBER NOT NULL,
	PAY_STEP VARCHAR2(500) NOT NULL,
	MEMBER_ID VARCHAR2(500) NOT NULL,
	LECTURE_NUM NUMBER NOT NULL,
	LECTURE_NAME VARCHAR2(1000) NOT NULL,
	LECTURE_CATEGORY VARCHAR2(500) NOT NULL
);

SELECT PAY_NUM, PAY_DATE, PAY_PRICE, PAY_STEP, MEMBER_ID, LECTURE_NUM, LECTURE_NAME, LECTURE_CATEGORY
FROM PAY
ORDER BY PAY_NUM DESC;

INSERT INTO PAY
VALUES(PAYSEQ.NEXTVAL, SYSDATE, '39800', '결제완료', 'stud1', 1, '한식 패키지', '한식');

UPDATE PAY
SET MEMBER_ID = 'asd123'
WHERE PAY_NUM = 1;

DROP SEQUENCE FOODSEQ;
DROP TABLE FOOD;

CREATE SEQUENCE FOODSEQ;

CREATE TABLE FOOD(
	FOOD_NUM NUMBER PRIMARY KEY,
	FOOD_NAME VARCHAR2(1000) NOT NULL,
	FOOD_LIFE VARCHAR2(1000),
	FOOD_ALARM_YN VARCHAR2(2) CHECK(FOOD_ALARM_YN IN ('Y', 'N')) NOT NULL,
	MEMBER_ID VARCHAR2(500) NOT NULL
);

SELECT FOOD_NUM, FOOD_NAME, FOOD_LIFE, FOOD_ALARM_YN, MEMBER_ID 
FROM FOOD
ORDER BY FOOD_NUM DESC;

INSERT INTO FOOD
VALUES(FOODSEQ.NEXTVAL, '마늘', NULL, 'N', 'asd234');


DROP SEQUENCE BILLSEQ;
DROP TABLE BILL;

CREATE SEQUENCE BILLSEQ;

CREATE TABLE BILL(
	BILL_NUM NUMBER PRIMARY KEY,
	BILL_NAME VARCHAR2(2000) NOT NULL,
	BILL_PRICE NUMBER NOT NULL,
	BILL_QUANTITY NUMBER NOT NULL,
	BILL_TOTAL NUMBER NOT NULL,
	BILL_DATE VARCHAR2(1000) NOT NULL,
	MEMBER_ID VARCHAR2(500) NOT NULL
);

SELECT BILL_NUM, BILL_NAME, BILL_PRICE, BILL_QUANTITY, BILL_TOTAL, BILL_DATE, MEMBER_ID
FROM BILL
ORDER BY BILL_NUM DESC;

INSERT INTO BILL
VALUES(BILLSEQ.NEXTVAL, '사과', 2200, 1, 2200, '2021-07-02', 'asd123');


SELECT MEMBER_ID, MEMBER_PW, MEMBER_NAME, MEMBER_EMAIL, MEMBER_PHONE, MEMBER_ADDRESS, MEMBER_ROLE, MEMBER_CATEGORY, MEMBER_CERTI, MEMBER_CAREER, MEMBER_REGDATE
FROM MEMBER
ORDER BY MEMBER_ID DESC;

INSERT INTO MEMBER
